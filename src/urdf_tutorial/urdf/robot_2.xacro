<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="urdf_tutorial">

    <!-- MACROS -->
    <xacro:include filename="macros.xacro"/>

    <!-- COLOR -->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0"/>
        </visual>
    </link>

    <!-- BODY LINK -->
    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0 0 0.21"/>
    </joint>

    <link name="body">
        <visual>
            <origin xyz="-0.205 0 0"/>
            <geometry>
                <box size="0.67 0.38 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="-0.205 0 0"/>
            <geometry>
                <box size="0.67 0.38 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.67" y="0.38" z="0.1">
            <origin xyz="-0.205 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- WHEEL ATTACHMENT -->
    <joint name="wheel_attachment_joint" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_attachment"/>
        <origin xyz="0 0 0.127"/>
    </joint>

    <link name="wheel_attachment">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.066 0.41 0.066"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.066 0.41 0.066"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.066" y="0.41" z="0.066">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL LINK  continuous / fixed -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.235 0.127" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.127" length="0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.127" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.127">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK  continuous / fixed -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.235 0.127" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.127" length="0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.127" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.06" radius="0.127">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER ATTACHMENT -->
    <joint name="caster_attachment_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_attachment"/>
        <origin xyz="-0.42 0 0.13"/>
    </joint>

    <link name="caster_attachment">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.24 0.24 0.06"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.24 0.24 0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.24" y="0.24" z="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- CASTER WHEEL LINK -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="caster_attachment"/>
        <child link="caster_wheel"/>
        <origin xyz="0 0 -0.03"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.10"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.10"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.10">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot>
